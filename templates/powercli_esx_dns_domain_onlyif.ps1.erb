# Connect to vcenter
<%= @_connect %>

# The domain we want on the host
$Domain = '<%= @domain %>'

# The current domain of the host
$DomainCheck = Get-VMHost -Name '<%= @name %>' | Get-VMHostNetwork | Select-Object -ExpandProperty DomainName

# If the domain was set to what we wanted
if($Domain -eq $DomainCheck){
   exit 1
}
# If the domain is NOT what we want
else{
   exit 0
}
