# Connect to vcenter
<%= @_connect %>

# Checking to see if the portgroup exists
$PortGroupCheck = Get-VirtualSwitch -Standard -VMhost '<%= @hostname %>' -Name '<%= @vswitch_name %>' | Get-VirtualPortgroup -Name '<%= @portgroup %>'

# If the portgroup was located..
if($PortGroupCheck){
  exit 1
}
# If the portgroup was not located...
else{
  exit 0
}